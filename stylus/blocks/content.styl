.content
  &__frame
    width 366px
    position relative
    margin 30px auto 35px
    @media (max-width: 767px)
      width 316px
    &::before
      content ''
      position absolute
      border 2px solid var(--main)
      display block
      width 100%
      height 93px
      left 0
      top 50%
      transform translateY(-50%)
      z-index 1
    &::after
      content ''
      width 156px
      height 100px
      top -20px
      left 50%
      transform translateX(-50%)
      display block
      background #fff
      position absolute
      z-index 2
    h2
      font-size 24px
      font-weight 400
      color var(--main)
      margin 0
      text-align center
      position relative
      z-index 3
      &::before
        content ''
        display block
        width 316px
        height 100px
        bottom 0
        left 50%
        transform translateX(-50%)
        position absolute
        background #fff
        z-index -1
        @media (max-width: 767px)
          width: 262px
      span
        display flex
        align-items center
        justify-content center
        margin auto
        width 230px
        height 54px
        background var(--main)
        color #fff
        font-size 16px
        font-weight bold
        text-transform uppercase
        margin-top 38px
  &__carousel
    width 912px
    margin auto
    margin-bottom 35px
    @media (max-width: 1279px)
      width 546px
    @media (max-width: 767px)
      width 180px
    .slick-list
      margin 0 -1.5px
    .slick-arrow
      top 120px
      @media (max-width: 767px)
        top 278px
    .slick-next
      top 124px
      right -70px
      @media (max-width: 1279px)
        right -68px
      @media (max-width: 767px)
        top 277px
        right calc((50vw - 90px) / -2 - 10px)
    .slick-prev
      @media (max-width: 1279px)
        left -65px
      @media (max-width: 767px)
        left calc((50vw - 90px) / -2 - 10px)
  &__content
    padding 6px 0
  &__img
    position relative
    border-top 3px solid #fff
    border-bottom 3px solid #fff
    overflow hidden
    &::before
      content ''
      width 100%
      height 100%
      display block
      top 0
      left 0
      position absolute
      background #fff
    picture
    img
      position relative
      display block
      width 100%
      height auto
      transition .5s
    .music__btn
      position absolute
      margin 0
      top 50%
      left 50%
      transform translate(-50%,-50%)
    .music__icon
      border 2px solid #fff
      width 50px
      height 50px
    .music__icon svg
      fill none
      color #fff
      width 20px
      height auto
    .music__icon--play svg #play
      stroke-width 2px

  &__item
    margin 0 1.5px
    &:first-child
      @media (max-width: 767px)
        margin-bottom 25px
    h3
      color #575757
      font-size 15px
      margin 0
      margin-top 15px
      text-align center
    &:hover
    &.active
      img
        filter blur(3px)
      h3
        color inherit
      .music__icon
        border 3px solid #fff !important
      .music__icon--play svg
        fill #fff !important
      .music__icon svg path
      .music__icon svg rect
        fill #fff !important
    &:nth-child(5n+1)
      color #797478
      .content__content
        background #797478
    &:nth-child(5n+2)
      color #9c3b74
      .content__content
        background #9c3b74
    &:nth-child(5n+3)
      color #7c506a
      .content__content
        background #7c506a
    &:nth-child(5n+4)
      color #796270
      .content__content
        background #796270
    &:nth-child(5n+5)
      color #9a266a
      .content__content
        background #9a266a


.content-triggers
  background #f9f9f9
  padding 51px 0 30px
  @media (max-width: 1279px)
    width 368px
    margin auto
    padding 50px 0 30px
  &__grid
    width 1160px
    display flex
    justify-content space-between
    align-items center
    margin auto
    @media (max-width: 1279px)
      width 100%
      flex-direction column
  &__img
    display flex
    align-items center
    justify-content center
    width 120px
    height 120px
    border-radius 50%
    overflow hidden
    img
      display block
  &__item
    padding-bottom 66px
    position relative
    @media (max-width: 1279px)
      margin-bottom 50px
      &:last-child
        margin-bottom 0
    @media (max-width: 1279px)
      margin-bottom 35px
    &:nth-child(1) .content-triggers__img
      border 3px solid #9a266a
    &:nth-child(2) .content-triggers__img
      border 3px solid #9c3b74
    &:nth-child(3) .content-triggers__img
      border 3px solid #7f3e64
    &:nth-child(4) .content-triggers__img
      border 3px solid #7c506a
    &:nth-child(5) .content-triggers__img
      border 3px solid #796270

    h3
      position absolute
      bottom 0
      left 50%
      transform translateX(-50%)
      width 140px
      text-align center
      font-size 15px
      line-height 18px
      color #434343
      font-weight 400
