.rz-grid
  width 990px
  margin auto
  display grid
  grid-template-columns repeat(4,1fr)
  grid-gap 3px
  margin-top 35px
  margin-bottom 40px
  @media (max-width: 1279px)
    width 494px
    grid-template-columns 1fr 1fr
    grid-row-gap 35px
  @media (max-width: 767px)
    width 245px
    grid-template-columns 1fr
  &__item
    position relative
    padding-bottom 35px
    &::after
      content ''
      display block
      width 15px
      height 15px
      position absolute
      bottom 0
      left 50%
      transform translateX(-50%)
      background #9a266a
    &:nth-child(2)::after
      background #797478
    &:nth-child(3)::after
      background #7c506a
    &:nth-child(4)::after
      background #a28396
    h3
      color #434343
      font-size 15px
      text-align center
      margin 18px 0 0
  &__img
    width 100%
    height 150px
    display flex
    overflow hidden
    picture
    img
      display block
      object-fit cover
      max-width 100%

.frame--rz-tech
  width 200px
  padding 18px 35px
  &::before
    width: calc(100% - 20px)
  &::after
    height: calc(100% - 20px)
  span
    display block
    font-size 17px
    font-weight 400
    text-transform lowercase
    &:nth-child(1)
      padding-bottom 2px
    &:nth-child(2)
      font-weight bold
      text-transform uppercase
      font-size 28px
    &:nth-child(3)
      font-size 18px

.rz-icons
  background #f9f9f9
  @media (max-width: 1279px)
    background none
  &__grid
    background #fff
    width 1270px
    margin auto
    display grid
    grid-template-columns 1fr 1fr 1fr
    grid-gap 3px
    @media (max-width: 1279px)
      grid-template-columns 1fr
      width 420px
    @media (max-width: 767px)
      width 375px
  &__item
    background #f9f9f9
    padding 55px 77px
    color #434343
    @media (max-width: 1279px)
      padding 60px 93px 43px
    @media (max-width: 767px)
      padding 50px 50px 70px 50px
    h3
      margin 23px 0 20px
      font-size 15px
    p
      margin 0
      font-size 15px
      line-height 1.4
  &__icon
    height 45px
    display flex
    align-items center
    img
      display block
      max-height 100%

.frame--unlim
  padding 20px 35px
  &::before
    width: calc(100% - 20px)
  &::after
    height: calc(100% - 20px)
  width 290px
  span
    display block
    font-size 28px
    text-transform uppercase
    &:nth-child(2)
      display inline-block
      font-size 15px
      text-transform lowercase
      padding-bottom 5px
      border-bottom 1px solid var(--main)
      font-weight 400

.rz-price
  width 610px
  margin auto
  list-style none
  display grid
  grid-template-columns 1fr 1fr 1fr
  grid-gap 5px
  padding 0
  @media (max-width: 767px)
    width 200px
    grid-template-columns 1fr
  &__item
    background #f9f9f9
    padding 40px 45px 44px
    text-align center
    img
      height 55px
    p
      margin 20px 0 0
      font-weight bold
      font-size 15px
      color #434343
.arrow-down
  width 36px
  margin 30px auto
  img
    display block
    transform rotate(180deg)
.frame--kp
  width 200px
  padding 17px 0
  margin-bottom 40px
  &::before
    width calc(100% - 15px)
  &::after
    display none
  span
    display block
    text-transform uppercase
    font-weight bold
    font-size 18px
    line-height 21px
    &:nth-child(2)
      font-weight bold
      text-transform lowercase
      font-size 15px
      font-weight 400
    &:nth-child(3)
      font-size 16px
      padding-top 3px


.rz-services
  &__img
    width 150px
    height 150px
    overflow hidden
    display flex
    align-items center
    justify-content center
    img
      display: block
      width 135px
      height 135px
      border-radius 27px
      border: 3px solid var(--main)
  &__text
    padding-left 20px
    padding-top 25px
    position absolute
    left 150px
    top 0
    span
      background var(--main)
      color #fff
      font-size 16px
      font-weight bold
      width 50px
      height 35px
      display flex
      align-items center
      justify-content center
    h4
      color #434343
      margin 25px 0 0
      font-size 16px
  &__grid
    display flex
    width 1170px
    justify-content space-between
    margin 40px auto 30px
    position relative
    left -75px
    max-width calc(100% - 60px)
    @media (max-width: 1279px)
      width 490px
      flex-wrap wrap
      left -73px
    @media (max-width: 767px)
      width 135px
      left -85px
  &__item
    position relative
    &:nth-child(odd)
      @media (max-width: 1279px)
        padding-right 50px
      @media (max-width: 767px)
        padding 0
    &:nth-child(1)
      .rz-services__text span
        background #7f3e64
      .rz-services__img img
        border-color #7f3e64
    &:nth-child(2)
      .rz-services__text span
        background #7c506a
      .rz-services__img img
        border-color #7c506a
    &:nth-child(3)
      .rz-services__text span
        background #9c3b74
      .rz-services__img img
        border-color #9c3b74
    &:nth-child(4)
      .rz-services__text span
        background #796270
      .rz-services__img img
        border-color #796270
    &:nth-child(1)
    &:nth-child(2)
      @media (max-width: 1279px)
        margin-bottom 75px
    &:nth-child(3)
      @media (max-width: 767px)
        margin-bottom 75px
    &:first-child
      .advantages__img
        border 3px solid #7f3e64
      .advantages__text span
        background #7f3e64
    &:nth-child(2)
      .advantages__img
        border 3px solid #7c506a
      .advantages__text span
        background #7c506a
    &:nth-child(3)
      .advantages__img
        border 3px solid #9c3b74
      .advantages__text span
        background #9c3b74
    &:nth-child(4)
      .advantages__img
        border 3px solid #796270
      .advantages__text span
        background #796270
