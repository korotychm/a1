.contact-container
  width 960px
  margin auto
  @media (max-width: 1279px)
    width 500px
  @media (max-width: 767px)
    width 100%
    padding 0 16px
    max-width 500px
.contact
  &__social
    width 230px
    margin auto
    margin-bottom 80px
    display flex
    align-items center
    justify-content space-between
    a
      text-decoration none
      width 55px
      height 55px
      display flex
      align-items center
      justify-content center
      border-radius 5px
      position relative
      overflow hidden
      &::before
        content ''
        width 80px
        height 80px
        background var(--main)
        display block
        position absolute
        top 90px
        left -80px
        transform rotate(45deg)
        transition .3s
      svg
        color var(--main)
        height 22px
        width auto
        position relative
        transition .3s
      &:hover
        &::before
          top -15px
          left -15px
        svg
          color #fff

  &__address
    width 360px
    margin auto
    line-height 21px
    @media (max-width: 1279px)
      width 100%
  &__contacts
    display grid
    grid-template-columns 1fr 1fr 1fr
    grid-gap 30px
    margin-bottom 30px
    @media (max-width: 1279px)
      grid-template-columns 1fr
  &__contact
    background #f9f9f9
    padding 34px 0
    text-align center
    color #434343
    font-size 15px
    font-weight bold
    img
      display block
      height 30px
      width auto
      margin 0 auto 25px
    a
      text-decoration none
      color inherit
      span
        transition .5s
        &:hover
          color var(--main)

@keyframes pulse
	0%
		opacity 0
	100%
		opacity 1

@keyframes pulse-input
	0%
		color #fff
	100%
		color var(--main)

.contact-form
  background #f9f9f9
  display grid
  grid-template-columns 1fr 1fr
  padding 65px 80px
  @media (max-width: 1279px)
    grid-template-columns 1fr
    grid-gap 50px
  @media (max-width: 767px)
    padding 65px 30px
  & + .footer__btn
    margin 40px 0
  &__div
    color var(--main)
    font-weight bold
    font-size 14px
    margin 20px 0
    text-align center
  &__left
    padding-right 60px
    @media (max-width: 1279px)
      padding 0
  &__input
    position relative
    & + .contact-form__input
      margin-top 30px
    label
      width 100%
      height 100%
      display flex
      align-items center
      justify-content center
      position absolute
      top 0
      left 0
      font-size 15px
      color #333333
      pointer-events none
      transition .5s
      &.pulse
        color var(--main)
        animation pulse 1.5s infinite
    &:hover label
      color var(--main)
    input[type="text"]:focus + label
    input[type="text"].filled + label
    textarea:focus + label
    textarea.filled + label
      display none
    input[type="text"]
    textarea
      font-size 15px
      display block
      width 100%
      border 2px solid var(--main)
      height 38px
      text-align center
      background none
      border-radius 6px
      color #333
      &.pulse-input
        animation pulse-input 1.5s infinite
      &:focus
        animation none
    textarea
      display inline-block
      vertical-align middle
      height 200px
      text-align left
      padding 15px

.contact-container .btn.btn-sent
  transition background .5s !important
  font-weight bold !important
  text-transform uppercase !important
  pointer-events none !important
