.next-section--mz
  margin 30px auto 35px
  animation none
.any-music
  padding-top 10px
  width 570px
  margin auto
  display grid
  grid-template-columns 1fr 1fr 1fr
  grid-gap 60px
  @media (max-width: 767px)
    width 150px
    grid-template-columns 1fr
    grid-gap 40px
  &__item
    padding-top 10px
    border-top 4px solid #9c3b74
    text-align center
    font-size 16px
    color #656565
    &:nth-child(2)
      border-color #796270
    &:nth-child(3)
      border-color #7c506a
    span
      text-transform uppercase
      display block
      margin auto
      font-weight bold

.mz .frame-image
  margin-top 30px
.frame-image__text--license
  width 300px
  height 100px
  p
    text-transform none

.mz-steps
  width 1149px
  margin auto
  display grid
  grid-template-columns 1fr 1fr 1fr
  position relative
  left 18px
  @media (max-width: 1279px)
    width 380px
    grid-template-columns 1fr
    grid-gap 30px
    left 0
  @media (max-width: 767px)
    width calc(100% - 32px)
    max-width 355px
  &__heading
    margin-left -33px
    display flex
    align-items center
    margin-bottom 30px
    @media (max-width: 1279px)
      margin-left 0
    span
      display flex
      align-items center
      justify-content center
      background var(--main)
      width 68px
      height 68px
      color #fff
      font-weight bold
      font-size 36px
      border-radius 10px
    h3
      background #f9f9f9
      line-height 50px
      margin 0
      padding-left 45px
      width calc(100% - 68px)
      color var(--main)
      font-size 14px
      text-transform uppercase
      @media (max-width: 767px)
        padding-left 25px
  &__content
    padding 13px 10px 30px 80px
    position relative
    @media (max-width: 1279px)
      padding-left 115px
    @media (max-width: 767px)
      padding-left 95px
      br
        display none
    &::before
      content ''
      display block
      width 2px
      height 100%
      position absolute
      top 0
      right -1px
      background var(--main)
      @media (max-width: 1279px)
        right auto
        left 33px
  &__icon
    margin-left -24px
    height 110px
    img
      height 105px
      width auto
      display block
  &__item
    &:nth-child(1) .mz-steps__icon img
      width 93px
      margin-top 2px
    &:nth-child(3) .mz-steps__icon img
      width 95px
      margin-left: -3px
      margin-top -2px
    p
      font-size 15px
      line-height 21px
      margin 10px 0 0
      color #434343
    &:last-child
      h3
        width 348px
        @media (max-width: 1279px)
          width calc(100% - 68px)
      .mz-steps__content::before
        display none
        @media (max-width: 1279px)
          display block
