.section-caption
  text-align center
  &__img
    display flex
    align-items center
    justify-content center
    object-fit cover
    margin-top -30px
    img
      display block
  &__title
    color #fff
    font-size 26px
    line-height 26px
    font-weight 400
    margin 0 auto 0
    background var(--main)
    display inline-flex
    text-transform uppercase
    width auto
    padding 17px 20px
    position relative
    width 420px
    justify-content center
    @media (max-width: 767px)
      width 300px
      font-size 21px
  .stick
    height 40px
    margin -10px auto 20px
    position relative
  &__subtitle
    font-size 24px
    font-weight 400
    color var(--main)
    margin 0 auto 30px
    text-align center
    width 380px
    @media (max-width: 767px)
      max-width 340px
      margin 0 auto 30px
